<% if @posts.none? %>
  No posts yet
<% else %>
  <% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <p><%= post.description %></p>
    <h3>Posted by <%= post.user.email %>
    <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>

    <% if post.user == current_user %>
      <%= link_to 'Delete', post_path(post), method: :delete %>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'New post', new_post_path %>