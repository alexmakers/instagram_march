<%= form_for @post, html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :picture %>
  <%= f.file_field :picture %>

  <%= f.label :tag_names, 'Tags' %>
  <%= f.text_field :tag_names %>

  <%= f.submit 'Post it!' %>
<% end %>